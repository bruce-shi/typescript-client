{
  "compilerOptions": {
    "target": "ES6",
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictFunctionTypes": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist"
  },
  "include": ["./test/**/*.ts", "./src/**/*.ts"],
  "exclude": ["node_modules", "examples"]
}